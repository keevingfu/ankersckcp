# Application Settings
APP_NAME=Soundcore KCP
APP_ENV=development
DEBUG=True
API_VERSION=v1

# Server Configuration
HOST=0.0.0.0
KNOWLEDGE_SERVICE_PORT=8001
CONTENT_SERVICE_PORT=8002
SUPPORT_SERVICE_PORT=8003
ANALYTICS_SERVICE_PORT=8004
AUTH_SERVICE_PORT=8005
SCHEDULER_SERVICE_PORT=8006

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=soundcore_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=soundcore_kcp
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database - MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=soundcore_user
MONGODB_PASSWORD=your_mongo_password
MONGODB_DB=soundcore_kcp
MONGODB_URL=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${MONGODB_DB}

# Database - Neo4j (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Vector Database - Pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=soundcore-knowledge

# AI Services - OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# AI Services - Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Authentication & Security
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your_encryption_key_here_change_in_production

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_PER_HOUR=10000

# Kafka Message Queue
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=soundcore_kcp

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring & Logging
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090
SENTRY_DSN=

# Feature Flags
ENABLE_RAG_ENGINE=True
ENABLE_CONTENT_GENERATION=True
ENABLE_AUTO_TAGGING=True
ENABLE_KNOWLEDGE_GRAPH=True

# Vector Search Configuration
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_METRIC=cosine
VECTOR_TOP_K=10

# Content Generation
CONTENT_MAX_LENGTH=2000
CONTENT_MIN_QUALITY_SCORE=0.7

# RAG Configuration
RAG_RETRIEVAL_TOP_K=5
RAG_RERANK_TOP_K=3
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
